{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "group:monorepos",
    "group:recommended",
    "workarounds:all",
    ":semanticCommitsDisabled",
    "docker:pinDigests"
  ],
  "customManagers": [
    {
      "customType": "regex",
      "description": "update _IMAGE versions in gitlab templates",
      "fileMatch": ["^(.*\\.)?gitlab-ci.*\\.yml$"],
      "matchStrings": ["(?<prefix>IMAGE: )(?<depName>[^\\$]*?):(?<currentValue>.*?)(?:@(?<currentDigest>sha256:[a-f0-9]+))?(?:\\s|$)"],
      "autoReplaceStringTemplate": "${match.groups.prefix}{{{depName}}}:{{{newValue}}}{{#if (and newDigest (or isPinDigest currentDigest))}}@{{{newDigest}}}{{/if}}\n",
      "datasourceTemplate": "docker"
    },
  ],
  "packageRules": [
    {
      "description": "Do not pin ubuntu packages",
      "matchPackagePatterns": [
        ".*ubuntu.*"
      ],
      "pinDigests": false
    }
  ]
}
